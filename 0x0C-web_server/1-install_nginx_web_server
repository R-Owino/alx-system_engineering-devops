#!/usr/bin/env bash
# Install and configure Nginx

# Update package list and install nginx
apt-get update
apt-get install -y nginx

# Configure nginx to listen on port 80 and return "Hello World!" at the root
echo "server {
    listen 80;
    location / {
        echo \"Hello World!\";
    }
}" > /etc/nginx/sites-available/default

# Restart nginx
service nginx start
